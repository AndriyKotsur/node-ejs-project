<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Catalogue item</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <!-- @import header.html-->
    <div class="container">

        <div class="product-wrapper">
            <div class="product-column">
                <div class="slideshow-container">
                    <div class="slider-title">Рис ваговий</div>
                    <div class="slideshow-items">
                        <div class="slides-item"><img src="img/slides/rice.jpeg" alt="Slides photography"></div>
                        <div class="slides-item"><img src="img/slides/grain.jpeg" alt="Slides photography"></div>
                        <div class="slides-item"><img src="img/slides/grain2.jpeg" alt="Slides photography"></div>
                        <div class="slides-item"><img src="img/slides/grain3.jpeg" alt="Slides photography"></div>
                        <a class="prev">&#10094;</a>
                        <a class="next">&#10095;</a>
                    </div>
                    <div class="slideshow-row">
                        <div class="slideshow-row-items"><img src="img/slides/rice.jpeg" alt="Slides photography"
                                id="1">
                        </div>
                        <div class="slideshow-row-items"><img src="img/slides/grain.jpeg" alt="Slides photography"
                                id="2">
                        </div>
                        <div class="slideshow-row-items"><img src="img/slides/grain2.jpeg" alt="Slides photography"
                                id="3">
                        </div>
                        <div class="slideshow-row-items"><img src="img/slides/grain3.jpeg" alt="Slides photography"
                                id="4">
                        </div>
                    </div>
                </div>
            </div>
            <div class="product-column">
                <div class="product-title">Опис товару</div>
                <table class="product-table">
                    <tbody class="product-table_body">
                        <tr>
                            <td>Найменування товару</td>
                            <td>Кухона сіль</td>
                        </tr>
                        <tr>
                            <td>Склад</td>
                            <td>сіль 100%</td>
                        </tr>
                        <tr>
                            <td>Нормативний документ</td>
                            <td>0</td>
                        </tr>
                        <tr>
                            <td>Фасовка нетто</td>
                            <td>0</td>
                        </tr>
                        <tr>
                            <td>Фасовка брутто</td>
                            <td>1000 г. ± 3%</td>
                        </tr>
                        <tr>
                            <td>Штрих код упаковки</td>
                            <td>4820150930035</td>
                        </tr>
                        <tr>
                            <td>Тип пакування упаковки</td>
                            <td>Поліпропілен</td>
                        </tr>
                        <tr>
                            <td>Кількість шт./kg ящик</td>
                            <td>25 шт./ 25 кг.</td>
                        </tr>
                        <tr>
                            <td>Кількість шт./kg піддон</td>
                            <td>20 шт/ 20 кг</td>
                        </tr>
                        <tr>
                            <td>Термін придатності</td>
                            <td>2 роки з дати виробництва</td>
                        </tr>
                        <tr>
                            <td>Умови зберігання</td>
                            <td>Зберігати в сухому місці при відносній вологості повітря не більше 75 %</td>
                        </tr>
                    </tbody>
                </table>
                <div class="product-button_order">
                    <a href="#" class="product-button_link popup-btn" data-popup="pop_message_order">Зробити
                        замовлення</a>
                </div>
            </div>
        </div>
    </div>

    <div class="popup-window_slider">
        <div class="popup-close">
            <span></span>
        </div>
        <div class="popup-content">
            <img class="popup-image" alt="Modal image">
        </div>
    </div>

    <div class="popup-window_modal" id="pop_call">
        <div class="popup-close">
            <span></span>
        </div>
        <div class="popup-content">
            <form class="popup-form">
                <ul class="popup-form-fields">
                    <li><input class="popup-form-field" type="text" name="name" id="name" value=""
                            placeholder="Ваше ім'я та прізвище" required></li>
                    <li><input class="popup-form-field" type="tel" name="phone" id="phone" value=""
                            placeholder="Ваш номер телефона" required></li>
                    <li>
                        <div class="popup-form-field_btn"><input type="submit" value="Надіслати"></div>
                    </li>
                </ul>
            </form>
        </div>
    </div>

    <div class="popup-window_modal" id="pop_message_order">
        <div class="popup-close">
            <span></span>
        </div>
        <div class="popup-content">
            <form class="popup-form">
                <ul class="popup-form_fields">
                    <li><input class="popup-form-field" type="text" name="name" value=""
                            placeholder="Ваше ім'я та прізвище" required></li>
                    <li><input class="popup-form-field" type="tel" name="phone" value=""
                            placeholder="Ваш номер телефона" required></li>
                    <li><textarea class="popup-form-field" name="message" id="message" cols="30" rows="10"
                            placeholder="Ваше повідомлення"></textarea></li>
                    <li>
                        <div class="popup-form-field_btn"><input type="submit" value="Надіслати">
                    </li>
                </ul>
            </form>
        </div>
    </div>
    <!-- @import footer.html-->
    <script src="script/script.js"></script>
</body>

</html>